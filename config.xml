<?xml version='1.0' encoding='utf-8'?>
<widget id="com.hoy.colordetective" version="1.0.0">
    <name>Color Detective</name>
    <description>
        An app thet takes pictures and identifies the colors in the picture by pressing the pixels.
    </description>
    <author email="aviyaakov1@gmail.com">
        Avraham Netanel Yaakov
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <preference name="StatusBarBackgroundColor" value="#101010" />
    <icon src="res/icon.png" />
    <platform name="android">
        <splash src="res\drawable-land\screen.png" density="land-hdpi"/>
        <splash src="res\drawable-land\screen.png" density="land-ldpi"/>
        <splash src="res\drawable-land\screen.png" density="land-mdpi"/>
        <splash src="res\drawable-land\screen.png" density="land-xhdpi"/>

        <splash src="res\drawable-port\screen.png" density="port-hdpi"/>
        <splash src="res\drawable-port\screen.png" density="port-ldpi"/>
        <splash src="res\drawable-port\screen.png" density="port-mdpi"/>
        <splash src="res\drawable-port\screen.png" density="port-xhdpi"/>
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="5000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="true" />
</widget>
